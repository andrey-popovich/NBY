<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/currency_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:animateLayoutChanges="true"
    android:background="@color/colorLight"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/currency_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dp"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/currency_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currency_txt"
        android:layout_margin="3dp"
        android:textColor="@color/colorSecondaryText" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/currency_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/favorite"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/currency_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currency_rate"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/favorite"
        android:textColor="@color/colorSecondaryText" />

</RelativeLayout>